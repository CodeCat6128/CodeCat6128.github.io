---
interface Props {
	title: string;
    time: string;
    description: string;
}

const { title, time, description } = Astro.props;
---

<div class="flex flex-col gap-7 bg-zinc-800 h-min px-6 py-6 rounded-xl w-full">
    <div class="flex flex-col md:flex-row gap-1 md:gap-2 md:justify-between items-start md:items-center">
        <h4 class="text-white text-left text-2xl font-semibold">{title}</h4>
        <p class="text-zinc-300 text-base font-semibold">{time}</p>
    </div>
    <span class="text-zinc-300 text-left text-base font-normal">{description}</span>
</div>